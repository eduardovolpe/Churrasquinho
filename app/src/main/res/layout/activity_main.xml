<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffefdfc6">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgLabel"
        android:src="@drawable/label"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgRodape"
        android:src="@drawable/rodape"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imgLabel" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEditar"
        android:layout_above="@+id/imgRodape"
        android:layout_alignStart="@+id/imgRodape"
        android:layout_marginBottom="29dp"
        android:src="@drawable/btn_03" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnIniciar"
        android:layout_above="@+id/btnEditar"
        android:layout_alignStart="@+id/btnEditar"
        android:src="@drawable/btn_01" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgLing"
        android:src="@drawable/btn_02"
        android:layout_alignTop="@+id/btnIniciar"
        android:layout_alignEnd="@+id/imgRodape" />

</RelativeLayout>
