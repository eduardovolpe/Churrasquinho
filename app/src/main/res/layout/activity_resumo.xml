<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.e3.churrasquinho.ResumoActivity"    android:background="#ffefdfc6">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblResumo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/lbl_resumo"
        />


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:layout_marginTop="65dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/lblResumo"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/linearLayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/txtCarnes" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/vlrCarnes"
                android:textStyle="bold"
               />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/txtBebidas" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/vlrBebidas"
                android:textStyle="bold" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/txtAcompanhamentos" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/vlrAcompanhamentos"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/txtDespesas" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/vlrDespesas"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="@string/editar"
            android:id="@+id/btnEditarResumo"
            android:gravity="center|center_vertical"
            android:layout_gravity="center"
            android:background="#ff000000"
            android:textColor="#ffefdfc6"
            android:textSize="15sp"
            android:drawableRight="@drawable/ic_edit"
            android:padding="10dp"
            android:layout_marginBottom="5dp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="@string/localizacao"
            android:id="@+id/btnLocalizacao"
            android:gravity="center|center_vertical"
            android:layout_gravity="center"
            android:background="#ff000000"
            android:textColor="#ffefdfc6"
            android:textSize="15sp"
            android:drawableRight="@drawable/location"
            android:padding="10dp"
            android:layout_marginBottom="5dp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="@string/finalizar"
            android:id="@+id/btnProsResumo"
            android:gravity="center|center_vertical"
            android:layout_gravity="center"
            android:background="#ff000000"
            android:textColor="#ffefdfc6"
            android:textSize="15sp"
            android:drawableRight="@drawable/next"
            android:paddingRight="10dp"
            />
    </LinearLayout>


</RelativeLayout>
