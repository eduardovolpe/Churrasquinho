<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffefdfc6">

    <GridLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:id="@+id/imgMeusChurras"
            android:src="@drawable/ic_launcher"
            android:layout_column="0"
            android:layout_row="0"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical">

            <TextView
             android:layout_marginLeft="10dp"
             android:layout_marginTop="5dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/nomeMeuChurras"
             android:text="@string/nomeChurras"
             android:textStyle="bold"
             android:textSize="30dp"
             android:layout_gravity="left|center_vertical" />

            <TextView
             android:layout_marginLeft="10dp"
             android:layout_marginTop="5dp"
             android:textSize="20dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/dataMeuChurras"
             android:text="@string/dataChurras"
             android:layout_gravity="center_vertical|right" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|right">

            <ImageView
                android:layout_width="34dp"
                android:layout_gravity="top"
                android:layout_height="wrap_content"
                android:id="@+id/imgCompartilhar"
                android:src="@drawable/ic_share" />
            <ImageView
                android:layout_marginTop="2dp"
                android:layout_width="34dp"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content"
                android:id="@+id/imgEditar"
                android:src="@drawable/ic_edit" />
        </LinearLayout>
    </GridLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>

</LinearLayout>