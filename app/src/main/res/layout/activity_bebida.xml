<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.e3.churrasquinho.bebidaActivity"
    android:background="#ffefdfc6">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblBebidas"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/lbl_bebida" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/lstBebidas"
            android:layout_below="@+id/lblBebidas"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="90dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/cadBebida"
        android:id="@+id/btnCadBebida"
        android:gravity="center|center_vertical"
        android:layout_gravity="center"
        android:background="#ff000000"
        android:textColor="#ffefdfc6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textSize="15sp"
        android:layout_marginBottom="45dp"
        android:drawableRight="@drawable/mais"
        android:paddingRight="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/continuar"
        android:id="@+id/btnProsseguir"
        android:gravity="center|center_vertical"
        android:layout_gravity="center"
        android:background="#ff000000"
        android:textColor="#ffefdfc6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textSize="15sp"
        android:drawableRight="@drawable/next"
        android:paddingRight="10dp"/>

</RelativeLayout>
