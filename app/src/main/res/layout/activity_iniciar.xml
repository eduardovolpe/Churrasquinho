<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.e3.churrasquinho.iniciarActivity"
    android:background="#ffefdfc6">

    <ImageView

        android:id="@+id/lblConvidados"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/lbl_convidados"
        android:layout_gravity="left|top"
        android:layout_columnSpan="3"
        android:layout_marginBottom="30px"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iconHomem"
        android:src="@drawable/homem"
        android:layout_gravity="bottom|right"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignTop="@+id/txtHomens"
        android:layout_alignStart="@+id/iconMulher" />

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/homem"
        android:id="@+id/txtHomens"
        android:textSize="70px"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblConvidados"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30px" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menosH"
        android:src="@drawable/menos"
        android:layout_gravity="top|right"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/txtHomens"
        android:layout_toStartOf="@+id/txtTotalHomem" />

    <TextView
        android:inputType="number"
        android:ems="3"
        android:id="@+id/txtTotalHomem"
        android:gravity="center"
        android:layout_gravity="center_horizontal|bottom"
        android:textSize="60px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iconHomem"
        android:layout_toEndOf="@+id/menosM"
        android:textAlignment="center"
        android:textColor="#ff000000"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maisH"

        android:src="@drawable/mais"
        android:layout_gravity="top|left"
        android:layout_below="@+id/txtHomens"
        android:layout_toEndOf="@+id/txtTotalHomem" />

    <ImageView
        android:id="@+id/iconMulher"
        android:src="@drawable/mulher"
        android:layout_gravity="bottom|right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtMulheres"
        android:layout_alignStart="@+id/iconCrianca" />


    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/mulher"
        android:id="@+id/txtMulheres"
        android:textSize="70px"
        android:layout_gravity="center_horizontal"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTotalHomem"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30px"
        android:layout_marginTop="10px" />

    <TextView
        android:inputType="number"
        android:ems="3"
        android:id="@+id/txtTotalMulher"
        android:gravity="center"
        android:layout_columnSpan="3"
        android:layout_gravity="center_horizontal|bottom"
        android:textSize="60px"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/zero"
        android:focusableInTouchMode="false"
        android:enabled="false"
        android:focusable="false"
        android:layout_below="@+id/iconMulher"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="#ff000000"/>

    <ImageView
        android:id="@+id/iconCrianca"
        android:src="@drawable/crianca"
        android:layout_gravity="bottom|right"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtCrianca"
        android:layout_toStartOf="@+id/txtTotalConvidados" />

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/crianca"
        android:id="@+id/txtCrianca"
        android:textSize="70px"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTotalMulher"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />

    <TextView
        android:inputType="number"
        android:ems="3"
        android:id="@+id/txtTotalCrianca"
        android:gravity="center"
        android:layout_gravity="center_horizontal|bottom"
        android:textSize="60px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zero"
        android:focusableInTouchMode="true"
        android:enabled="false"
        android:focusable="false"
        android:layout_below="@+id/iconCrianca"
        android:layout_alignStart="@+id/txtTotalMulher"
        android:textAlignment="center"
        android:textColor="#ff000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/txtTotalConvidados"
        android:layout_above="@+id/btnCarne"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10px"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:textColor="#ff000000" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/continuar"
        android:id="@+id/btnCarne"
        android:gravity="center|center_vertical"
        android:layout_gravity="center"
        android:background="#ff000000"
        android:textColor="#ffefdfc6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menosM"
        android:src="@drawable/menos"
        android:layout_gravity="top|right"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/txtMulheres"
        android:layout_toStartOf="@+id/txtTotalMulher" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maisM"
        android:src="@drawable/mais"
        android:layout_gravity="top|left"
        android:layout_below="@+id/txtMulheres"
        android:layout_alignStart="@+id/maisH" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menosC"
        android:src="@drawable/menos"
        android:layout_gravity="top|right"
        android:focusableInTouchMode="false"
        android:layout_alignTop="@+id/maisC"
        android:layout_toStartOf="@+id/txtTotalCrianca" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maisC"
        android:src="@drawable/mais"
        android:layout_gravity="top|left"
        android:layout_alignBottom="@+id/txtTotalCrianca"
        android:layout_alignStart="@+id/maisH" />

</RelativeLayout>
