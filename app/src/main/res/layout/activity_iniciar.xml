<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.e3.churrasquinho.iniciarActivity"
    android:background="#ffefdfc6">

        <ImageView

        android:id="@+id/lblConvidados"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/lbl_convidados"
        android:layout_gravity="left|top"
        android:layout_columnSpan="3"
        android:layout_marginBottom="50px"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
        android:id="@+id/iconHomem"
        android:src="@drawable/homem"
            android:layout_gravity="bottom|right"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_below="@+id/lblConvidados"
            android:layout_alignParentStart="true" />

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/homem"
        android:id="@+id/txtHomens"
        android:textSize="70px"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblConvidados"
        android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menosH"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/menos"
            android:layout_gravity="top|right"
            android:focusableInTouchMode="false"
            android:layout_below="@+id/iconHomem"
            android:layout_toStartOf="@+id/txtMulheres" />

    <EditText
        android:inputType="number"
        android:ems="3"
        android:id="@+id/edtHomem"
        android:gravity="center"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_columnSpan="1"
        android:enabled="true"
        android:focusable="true"
        android:layout_row="2"
        android:layout_column="2"
        android:textSize="60px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtHomens"
        android:layout_alignStart="@+id/edtCriancas" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/maisH"
            android:layout_row="2"
            android:layout_column="3"
            android:src="@drawable/mais"
            android:layout_gravity="top|left"
            android:layout_alignTop="@+id/menosH"
            android:layout_toEndOf="@+id/txtTotalConvidados" />

        <ImageView
        android:id="@+id/iconMulher"
        android:src="@drawable/mulher"
            android:layout_gravity="bottom|right"
        android:layout_row="3"
        android:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtMulheres"
            android:layout_alignStart="@+id/iconHomem" />

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/mulher"
        android:id="@+id/txtMulheres"
        android:textSize="70px"
        android:layout_gravity="center_horizontal"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtHomem"
        android:layout_alignStart="@+id/txtCrianca" />

    <EditText
        android:inputType="number"
        android:ems="3"
        android:id="@+id/edtMulher"
        android:gravity="center"
        android:layout_columnSpan="3"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_row="4"
        android:layout_column="2"
        android:textSize="60px"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/txtMulheres"
        android:layout_alignStart="@+id/edtHomem" />

    <ImageView
        android:id="@+id/iconCrianca"
        android:src="@drawable/crianca"
        android:layout_gravity="bottom|right"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtCrianca"
        android:layout_toStartOf="@+id/txtTotalConvidados" />

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/crianca"
        android:id="@+id/txtCrianca"
        android:textSize="70px"
        android:layout_gravity="center_horizontal"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edtCriancas"
        android:layout_centerHorizontal="true" />

    <EditText
        android:inputType="number"
        android:ems="3"
        android:id="@+id/edtCriancas"
        android:gravity="center"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_columnSpan="3"
        android:layout_row="6"
        android:layout_column="2"
        android:textSize="60px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtTotalConvidados"
        android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/txtTotalConvidados"
            android:layout_row="7"
            android:layout_column="2"
            android:enabled="false"
            android:editable="false"
            android:layout_above="@+id/btnIniciar"
            android:layout_centerHorizontal="true"
            android:inputMethod="@string/total" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="70px"
            android:text="@string/continuar"
            android:id="@+id/btnIniciar"
            android:layout_row="13"
            android:layout_columnSpan="3"
            android:layout_column="1"
            android:gravity="center|center_vertical"
            android:layout_gravity="center"
            android:background="#ff000000"
            android:textColor="#ffefdfc6"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />


</RelativeLayout>
