<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.e3.churrasquinho.iniciarActivity"
    android:background="#ffefdfc6">


    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:columnCount="3"
        android:rowCount="10">


        <ImageView

        android:id="@+id/lblConvidados"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/lbl_convidados"
        android:layout_gravity="left|top"
        android:layout_columnSpan="3"
        android:layout_marginBottom="80px"/>

        <ImageView
        android:id="@+id/iconHomem"
        android:src="@drawable/homem"
        android:layout_alignBottom="@+id/txtHomens"
        android:layout_toStartOf="@+id/edtHomem"
        android:layout_gravity="fill_horizontal|bottom"
        />

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/homem"
        android:id="@+id/txtHomens"
        android:textSize="70px"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:layout_width="218dp"
        android:layout_columnSpan="2"/>

    <EditText
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edtHomem"
        android:text="@string/num"
        android:gravity="center"
        android:layout_below="@+id/iconHomem"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_columnSpan="3"
        android:layout_marginTop="30px"
        android:layout_marginBottom="50px"/>

    <ImageView
        android:id="@+id/iconMulher"
        android:src="@drawable/mulher"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/edtMulher"
        android:layout_gravity="fill_horizontal|bottom"
        android:layout_rowSpan="2" />

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/mulher"
        android:id="@+id/txtMulheres"
        android:textSize="70px"
        android:layout_gravity="bottom"
        android:layout_columnSpan="2"/>

    <EditText
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edtMulher"
        android:text="@string/num"
        android:layout_alignStart="@+id/edtHomem"
        android:gravity="center"
        android:layout_columnSpan="3"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="30px"
        android:layout_marginBottom="50px"/>

    <ImageView
        android:id="@+id/iconCrianca"
        android:src="@drawable/crianca"
        android:layout_toStartOf="@+id/edtCriancas"
        android:layout_gravity="fill_horizontal|bottom"/>

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/crianca"
        android:id="@+id/txtCrianca"
        android:textSize="70px"
        android:layout_alignStart="@+id/txtHomens"
        android:layout_gravity="bottom|left"
        android:layout_columnSpan="2"/>

    <EditText
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edtCriancas"
        android:text="@string/num"
        android:gravity="center"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_columnSpan="3"
        android:layout_marginTop="30px"
        android:layout_marginBottom="50px"/>

    </GridLayout>

</RelativeLayout>
