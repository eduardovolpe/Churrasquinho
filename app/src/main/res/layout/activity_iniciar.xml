<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.e3.churrasquinho.iniciarActivity"
    android:background="#ffefdfc6"
    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleConvidados"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/lbl_convidados"
            android:layout_marginBottom="5sp" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_marginTop="15sp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgHomem"
                android:src="@drawable/homem" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/homem"
                android:id="@+id/titleHomem"
                android:textSize="40dp"
                android:layout_marginLeft="10sp"
                android:layout_gravity="center" />
        </LinearLayout>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtTotalHomem"
            android:layout_gravity="center_horizontal"
            android:textSize="40dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:numeric="integer"
            android:textColor="#ff8f273e"
            android:text="@string/zero" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="15sp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgMulher"
                android:src="@drawable/mulher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/mulher"
                android:id="@+id/titleMulher"
                android:textSize="40dp"
                android:layout_marginLeft="10sp"
                android:layout_gravity="center" />
        </LinearLayout>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtTotalMulher"
            android:layout_gravity="center_horizontal"
            android:textSize="40dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:numeric="integer"
            android:textColor="#ff8f273e"
            android:inputType="none"
            android:text="@string/zero" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="15sp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgCrianca"
                android:src="@drawable/crianca" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/crianca"
                android:id="@+id/titleCrianca"
                android:textSize="40dp"
                android:layout_marginLeft="5sp"
                android:layout_gravity="center" />
        </LinearLayout>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtTotalCrianca"
            android:layout_gravity="center_horizontal"
            android:textSize="40dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:numeric="integer"
            android:textColor="#ff8f273e"
            android:text="@string/zero" />

    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:text="@string/continuar"
        android:id="@+id/btnProsseguir"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        android:layout_height="40dp"
        android:background="#ff000000"
        android:textColor="#ffefdfc6"
        android:textSize="15sp"
        android:drawableRight="@drawable/next"
        android:paddingRight="10dp"/>

</RelativeLayout>
