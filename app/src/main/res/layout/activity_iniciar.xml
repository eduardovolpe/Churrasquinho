<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.e3.churrasquinho.iniciarActivity"
    android:background="#ffefdfc6">


    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnCount="3"
        android:rowCount="14"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <ImageView

        android:id="@+id/lblConvidados"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/lbl_convidados"
        android:layout_gravity="left|top"
        android:layout_columnSpan="3"
        android:layout_marginBottom="50px"
            android:layout_row="0"
            android:layout_column="0" />

        <ImageView
        android:id="@+id/iconHomem"
        android:src="@drawable/homem"
        android:layout_alignBottom="@+id/txtHomens"
        android:layout_toStartOf="@+id/edtHomem"
        android:layout_gravity="fill_horizontal|bottom"
            android:layout_height="wrap_content"
            android:layout_width="90dp"
            android:layout_row="1"
            android:layout_column="0" />

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/homem"
        android:id="@+id/txtHomens"
        android:textSize="70px"
        android:layout_width="410px"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_row="1"
        android:layout_column="1" />

    <EditText
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edtHomem"
        android:gravity="center"
        android:layout_below="@+id/iconHomem"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_columnSpan="3"
        android:layout_marginTop="20px"
        android:layout_marginBottom="35px"
        android:enabled="true"
        android:focusable="true"
        android:layout_row="2"
        android:layout_column="0" />

    <ImageView
        android:id="@+id/iconMulher"
        android:src="@drawable/mulher"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/edtMulher"
        android:layout_gravity="fill_horizontal|bottom"
        android:layout_row="3"
        android:layout_column="0" />

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/mulher"
        android:id="@+id/txtMulheres"
        android:textSize="70px"
        android:layout_gravity="center_horizontal"
        android:layout_row="3"
        android:layout_column="1" />

    <EditText
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edtMulher"
        android:layout_alignStart="@+id/edtHomem"
        android:gravity="center"
        android:layout_columnSpan="3"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="20px"
        android:layout_marginBottom="35px"
        android:layout_row="4"
        android:layout_column="0" />

    <ImageView
        android:id="@+id/iconCrianca"
        android:src="@drawable/crianca"
        android:layout_toStartOf="@+id/edtCriancas"
        android:layout_gravity="fill_horizontal|bottom"
        android:layout_row="5"
        android:layout_column="0" />

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/crianca"
        android:id="@+id/txtCrianca"
        android:textSize="70px"
        android:layout_gravity="center_horizontal"
        android:layout_row="5"
        android:layout_column="1" />

    <EditText
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edtCriancas"
        android:gravity="center"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_columnSpan="3"
        android:layout_marginTop="20px"
        android:layout_marginBottom="35px"
        android:layout_row="6"
        android:layout_column="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtTotalConvidados"
            android:layout_row="7"
            android:layout_column="1"
            android:enabled="true"
            android:editable="false" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="70px"
            android:text="@string/continuar"
            android:id="@+id/btnIniciar"
            android:layout_row="13"
            android:layout_column="1"
            android:gravity="center|center_vertical"
            android:layout_gravity="center"
            android:background="#ff000000"
            android:textColor="#ffefdfc6" />

    </GridLayout>

</RelativeLayout>
